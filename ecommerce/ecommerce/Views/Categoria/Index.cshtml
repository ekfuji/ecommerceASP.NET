@using ecommerce.Models
@model List<Categoria>
@{

   

}


<div>
    <p>
        <h2>Gerenciamento de Categorias</h2>
    </p>
    @*<a href="~/Views/Categoria/Cadastrar"> Cadastrar Categoria </a>*@

    @* Link em MVC | Razor *@



    <div>
        <table class="table table-hover">
            <tr class="table-secondary">
                <th>Nome</th>
                <th>Excluir</th>
                <th>Alterar</th>
            </tr>

            @foreach (Categoria categoriaCadastrada in Model)
            {
                <tr>
                    <td>@categoriaCadastrada.Nome</td>
                    <td>@Html.ActionLink("Remover", "RemoverCategoria", "Categoria", new { id = categoriaCadastrada.CategoriaId }, new { @class = "btn btn-primary" })</td>
                    <td>@Html.ActionLink("Alterar", "AlterarCategoria", "Categoria", new { id = categoriaCadastrada.CategoriaId }, new { @class = "btn btn-primary" })</td>

                </tr>


            }

        </table>

    </div>
</div>
